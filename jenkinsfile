pipeline {
    agent {
        node {
            label 'slave'
        }
    }

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64'
        MAVEN_HOME = '/opt/maven'
        PATH = "$JAVA_HOME/bin:$MAVEN_HOME/bin:$PATH"

        // JFrog Docker Registry
        JFROG_URL = 'taxibooking01.jfrog.io'
        DOCKER_REPO = 'taxi-dev-docker-local'
        IMAGE_NAME = 'taxiapp'
    }

    stages {

        stage('SCM') {
            steps {
                echo 'SCM stage'
                git url: 'https://github.com/ahmedhamraj/taxi.git',
                    branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo 'Build stage'
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Test stage'
                sh 'mvn test'
            }
        }

        stage('SonarCloud Analysis') {
            steps {
                echo 'SonarCloud Analysis stage'
                withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=ahmedhamrajtaxi \
                        -Dsonar.organization=ahmedhamrajtaxi \
                        -Dsonar.host.url=https://sonarcloud.io \
                        -Dsonar.login=$SONAR_TOKEN
                    '''
                }
            }
        }

        stage('upload artifact JFROG') {
            steps {
                echo 'upload artifact JFROG stage'
                withCredentials([
                    usernamePassword(
                        credentialsId: 'jfrog-cred',
                        usernameVariable: 'JF_USER',
                        passwordVariable: 'JF_PASS'
                    )
                ]) {
                    sh '''
                        ARTIFACT_NAME=taxi-${BUILD_NUMBER}.war

                        cp taxi-booking/target/*.war \$ARTIFACT_NAME

                        curl -u $JF_USER:$JF_PASS \
                        -T $ARTIFACT_NAME \
                        "https://taxibooking01.jfrog.io/artifactory/taxi-libs-release/build-${BUILD_NUMBER}/$ARTIFACT_NAME"
                    '''
                }
            }
        }    

        stage('Docker Build') {
            steps {
                echo 'Building Docker Image..'

                sh '''
                    docker build -t $JFROG_URL/$DOCKER_REPO/$IMAGE_NAME:${BUILD_NUMBER} .
                
                '''     
            }
        }    

        stage('Docker Login & Push') {
            steps {
                echo 'Logging in to JFrog Docker Registry and pushing image..'

                withCredentials([usernamePassword(
                    credentialsId: "jfrog-cred",
                    usernameVariable: "JF_USER",
                    passwordVariable: "JF_PASS"
                )]) {
                    sh '''
                        docker login $JFROG_URL -u $JF_USER -p $JF_PASS
                        docker push $JFROG_URL/$DOCKER_REPO/$IMAGE_NAME:${BUILD_NUMBER}
                    '''
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                echo 'Deploying to EKS Cluster..'

                withKubeConfig([credentialsId: 'dev-eks-config']) {
                    sh '''
                        echo "Injecting image version into deployment.yaml"
                        sed -i "s|IMAGE_TAG|${BUILD_NUMBER}|g" deployment.yaml
                        
                        echo "Applying manifests to EKS cluster"
                        kubectl apply -f deployment.yaml -n dev
                        kubectl apply -f service.yaml -n dev

                        echo "checking Rolling status..."
                        kubectl rollout status deployment/taxiapp -n dev

                        echo "Deployed completed"
                    '''        
                }
            }
        }
    }
}        