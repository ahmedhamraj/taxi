pipeline {
    agent {
        node {
            label 'slave'
        }
    }

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64'
        MAVEN_HOME = '/opt/maven'
        PATH = "$JAVA_HOME/bin:$MAVEN_HOME/bin:$PATH"
    }

    stages {

        stage('SCM') {
            steps {
                echo 'SCM stage'
                git url: 'https://github.com/ahmedhamraj/taxi.git',
                    branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo 'Build stage'
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Test stage'
                sh 'mvn test'
            }
        }

        stage('SonarCloud Analysis') {
            steps {
                echo 'SonarCloud Analysis stage'
                withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=ahmedhamraj_taxi \
                        -Dsonar.organization=ahmedhamraj \
                        -Dsonar.host.url=https://sonarcloud.io \
                        -Dsonar.login=$SONAR_TOKEN
                    '''
                }
            }
        }
    }
}
