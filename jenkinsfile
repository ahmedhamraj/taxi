pipeline {
    agent {
        node {
            label 'slave'
        }
    }

    environment {
        java_home = '/usr/lib/jvm/java-17-openjdk-amd64'
        maven_home = '/opt/maven'
        path = "$java_home/bin:$maven_home/bin:$PATH" 
    }
    stages {
        stage('scm') {
            steps {
                echo 'scm stage'
                git url: 'https://github.com/ahmedhamraj/taxi.git', 
                    branch: 'main'
            }
       }

        stage('Build') {
            steps {
                echo 'Build stage'
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Test stage'
                sh 'mvn test'
            }
        }
    }
}